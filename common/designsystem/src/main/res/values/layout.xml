<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Layout-->
    <!--Rembrandt uses an 8dp grid system. Smaller components can align to a 2dp 'sub' grid.-->

    <!--2dp sub grid-->
    <dimen name="grid_0_25">@dimen/_2sdp</dimen>
    <dimen name="grid_0_5">@dimen/_4sdp</dimen>

    <!--8dp grid-->
    <dimen name="grid_1">@dimen/_8sdp</dimen>
    <dimen name="grid_2">@dimen/_16sdp</dimen>
    <dimen name="grid_3">@dimen/_24sdp</dimen>
    <dimen name="grid_4">@dimen/_32sdp</dimen>
    <dimen name="grid_5">@dimen/_40sdp</dimen>
    <dimen name="grid_6">@dimen/_48sdp</dimen>
    <dimen name="grid_7">@dimen/_56sdp</dimen>
    <dimen name="grid_7_5">@dimen/_60sdp</dimen>
    <dimen name="grid_8">@dimen/_64sdp</dimen>
    <dimen name="grid_9">@dimen/_72sdp</dimen>

</resources>